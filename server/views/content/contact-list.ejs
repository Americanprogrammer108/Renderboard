<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Contact List</title>

    <!-- CSS Section -->
    <link rel="stylesheet" href="../../Content/app.css">
    <link rel="stylesheet" href="../../node_modules/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="../../node_modules/@fortawesome/fontawesome-free/css/all.css">
    <script src="../../Scripts/authguard.ts"></script>
</head>
<body>

<header>

</header>

<main class="container">
    <h1>Contact List</h1>

    <div class="col">
        <a href="/add" id="addButton" class="btn btn-primary btn-sm mb-1">
            <i class="fas fa-plus fa-sm"></i> Add Contact
        </a>
           <!--
        <td class="text-center">
            <button id="addButton" class="btn btn-primary btn-sm mb-1">
                <i class="fas fa-plus-circle fa-sm">Add Contact</i>
            </button>
        </td> -->

        <table class="table table-striped table-boarded table-hover">
            <thread class="table-dark">
                <tbody id="contactList">
                <% for(let count = 0; count < contacts.length; count++)
                {%>
                    <tr>
                        <th scope="row" class="text-center"><%count + 1%> </th>
                        <td><%=contacts[count].FullName %></td>
                        <td><%=contacts[count].ContactNumber %></td>
                        <td><%=contacts[count].EmailAddress %></td>

                        <td class="text-center">
                            <a href="/edit/<%=contacts[count]._id%>" class="btn btn-primary btn-sm fa-edit">
                                <i class="fas fa-edit fa-sm">Edit</i>
                            </a>
                        </td>

                        <td class="text-center">
                            <a href="/delete/<%=contacts[count]._id%>" class="btn btn-danger btn-sm delete">
                                <i class="fas fa-trash-alt fa-sm">Delete</i>
                            </a>
                        </td>
                    </tr>
                <%}%>

                </tbody>

            </thread>
        </table>
    </div>
</main>



<!-- Scripting Section -->
<script src="../../Scripts/namespace.js"></script>
<script src="../../Scripts/contact.js"></script>
<script src="../../Scripts/app.js"></script>
<script src="../../node_modules/jquery/dist/jquery.min.js"></script>
<script src="../../node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>